<h1>Edit the <%= @creature.name %> creature</h1>
<br>
<%= form_for @creature do |f|%>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Creature", class: "btn btn-block btn-success"%>
  </div>
<% end %>

<br>
<%= link_to "<- Back to this creature", creature_path(@creature) %>
