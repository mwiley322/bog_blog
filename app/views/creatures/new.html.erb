<h1>Create a new creature</h1>
<%= form_for :creature, url: "/creatures", method: "post" do |f|%>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Creature", class: "btn btn-block btn-success"%>
  </div>
<% end %>
